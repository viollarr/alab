<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://www.joomla.org/xml/dtd/1.5/plugin-install.dtd">
<install type="plugin" group="editors-xtd" version="1.5">
	<name>Editor Button - Modules Anywhere</name>
	<description>Modules Anywhere - place modules anywhere in Joomla!</description>
	<version>1.3.4</version>
	<creationDate>February 2010</creationDate>
	<author>NoNumber! (Peter van Westen)</author>
	<authorEmail>peter@nonumber.nl</authorEmail>
	<authorUrl>http://www.nonumber.nl</authorUrl>
	<copyright>Copyright (C) 2010 NoNumber! All Rights Reserved</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>

	<!-- Files -->
	<files>
		<filename plugin="editorbuttons">modulesanywhere.php</filename>
		<folder>modulesanywhere</folder>
	</files>

	<!-- Parameters -->
	<params addpath="/plugins/system/nonumberelements/elements">
		<param name="@loadlanguage" type="loadlanguage" extension="plg_editors-xtd_modulesanywhere" />
		<param name="@license" type="license" extension="Modules Anywhere" />
		<param name="@dependency" type="dependency"
			label="the Modules Aywhere system plugin"
			file="/plugins/system/modulesanywhere.php" />
		<param name="@title" type="title"
			label="Modules Aywhere editor button"
			description="This button makes inserting {module} tags easy!"
			image="/plugins/editors-xtd/modulesanywhere/images/logo.png"
			image_w="60" image_h="80"
			url="http://www.nonumber.nl/modulesanywhere"
			download_url="http://www.nonumber.nl/modulesanywhere/download"
			help_url="http://www.nonumber.nl/modulesanywhere"
			version="1.3.4"
			version_url="http://www.nonumber.nl/versions"
			version_file="version_modulesanywhere" />
		<param name="button_text" type="text" default="Insert Module" label="Button Text" description="Button Text (description)" />
		<param name="button_icon" type="radio" default="1" label="Show Icon" description="Show Icon (description)">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="enable_frontend" type="radio" default="1" label="Enable in frontend" description="Enable in frontend (description)">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
	</params>
</install>